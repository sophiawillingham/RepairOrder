<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepairOrderActivity">

    <TextView
        android:id="@+id/repairOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="@string/repair_order"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairOrder"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Technician, Order Type, Inspection, Paint, Parts, Labor Labels -->
    <TextView
        android:id="@+id/technician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/technician"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderType" />

    <TextView
        android:id="@+id/orderType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/order_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/Inspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/inspection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/technician" />

    <TextView
        android:id="@+id/Paint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/paint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Inspection" />

    <TextView
        android:id="@+id/Parts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/parts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Paint" />

    <TextView
        android:id="@+id/Labor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/labor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Parts" />

    <EditText
        android:id="@+id/editTechnician"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/technician"
        app:layout_constraintTop_toBottomOf="@+id/editOrderType" />

    <EditText
        android:id="@+id/editOrderType"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/orderType"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editInspection"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/Inspection"
        app:layout_constraintTop_toBottomOf="@+id/editTechnician" />

    <EditText
        android:id="@+id/editPaint"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/Paint"
        app:layout_constraintTop_toBottomOf="@+id/editInspection" />

    <EditText
        android:id="@+id/editParts"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/Parts"
        app:layout_constraintTop_toBottomOf="@+id/editPaint" />

    <EditText
        android:id="@+id/editLabor"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/Labor"
        app:layout_constraintTop_toBottomOf="@+id/editParts" />

    <Spinner
        android:id="@+id/repair_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/editOrderType" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/editLabor"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Subtotal, Tax, Total -->
    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtotal"
        app:layout_constraintTop_toBottomOf="@+id/editLabor"
        app:layout_constraintStart_toEndOf="@+id/submitButton" />

    <TextView
        android:id="@+id/subtotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_0"
        app:layout_constraintStart_toEndOf="@+id/subtotal"
        app:layout_constraintTop_toTopOf="@+id/subtotal" />

    <TextView
        android:id="@+id/tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tax"
        app:layout_constraintTop_toBottomOf="@+id/subtotal"
        app:layout_constraintStart_toStartOf="@+id/subtotal" />

    <TextView
        android:id="@+id/taxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_0"
        app:layout_constraintStart_toEndOf="@+id/tax"
        app:layout_constraintTop_toTopOf="@+id/tax" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        app:layout_constraintTop_toBottomOf="@+id/tax"
        app:layout_constraintStart_toStartOf="@+id/tax" />

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_0"
        app:layout_constraintStart_toEndOf="@+id/total"
        app:layout_constraintTop_toTopOf="@+id/total" />

</androidx.constraintlayout.widget.ConstraintLayout>


