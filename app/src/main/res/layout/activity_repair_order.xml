<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepairOrderActivity">

    <!-- title label -->
    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="211dp"
        android:layout_height="42dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="cursive"
        android:text="@string/title_label"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- divider below title -->
    <View
        android:id="@+id/titleDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/titleLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- subheader -->
    <TextView
        android:id="@+id/textSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_tammudu"
        android:text="@string/subheader"
        app:layout_constraintTop_toBottomOf="@id/titleDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- order type label -->
    <TextView
        android:id="@+id/textOrderType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textSubheader"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- order type input -->
    <EditText
        android:id="@+id/editOrderType"
        android:layout_width="180dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toEndOf="@id/textOrderType"
        app:layout_constraintTop_toTopOf="@id/textOrderType"
        android:ems="10"
        android:inputType="text"/>

    <!-- technician label -->
    <TextView
        android:id="@+id/textTechnician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/technician"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textOrderType"
        android:layout_marginTop="16dp"/>

    <!-- technician input -->
    <EditText
        android:id="@+id/editTechnician"
        android:layout_width="180dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toEndOf="@id/textTechnician"
        app:layout_constraintTop_toTopOf="@id/textTechnician"
        android:ems="10"
        android:inputType="text"/>

    <!-- add the rest of inputs like inspection, paint, parts, labor similarly -->

</androidx.constraintlayout.widget.ConstraintLayout>
